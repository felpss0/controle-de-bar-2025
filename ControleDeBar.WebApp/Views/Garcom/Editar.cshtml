

@model EditarGarcomViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Garçom";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Editar" asp-route-id="@Model.Id" method="post">
                    <h3>Formulário de Edição</h3>

                    @if (ViewData.ModelState["CadastroUnico"]?.Errors.Count > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewData.ModelState["CadastroUnico"]!.Errors.First().ErrorMessage
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }


                    <div class="form-group d-grid gap-2">
                        <label for="Nome" class="control-label fs-5">Número:</label>
                        <input name="Nome" class="form-control" value="@Model.Nome" />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Cpf" class="control-label fs-5">CPF:</label>
                        <input name="Cpf" class="form-control" value="@Model.Cpf" />
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/garcons">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">
}
